{
    "module": "dist/index.esm.js",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "name": "relax",
    "version": "1.0.0-rc01",
    "description": "A toolkit for easier handling of client side development, no matter if you are using vanilla JS or a SPA framework.",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "dev": "vite",
        "buildVite": "vite build",
        "preview": "vite preview",
        "test": "jest --no-cache",
        "test:watch": "jest --watchAll --no-cache",
        "docs": "typedoc src/index.ts -out ./docs/api",
        "docs2": "esdoc -c .esdoc.json",
        "build": "node ./build/build.mjs",
        "start": "node ./build/serve.js",
        "analyze": "node ./build/analyze.js"
    },
    "keywords": [
        "dom",
        "spa",
        "forms",
        "views"
    ],
    "author": "jgauffin",
    "license": "Apache-2.0",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/jsdom": "^21.1.6",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "clean-jsdoc-theme": "^4.2.17",
        "esbuild": "^0.20.1",
        "esdoc": "^1.1.0",
        "esdoc-standard-plugin": "^1.0.0",
        "esdoc-typescript-plugin": "^1.0.1",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jsdoc": "^4.0.2",
        "jsdom": "^24.0.0",
        "npm-dts": "^1.3.12",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typedoc": "^0.25.8",
        "typescript": "^5.3.3",
        "vite-plugin-babel": "^1.2.0",
        "ws": "^8.16.0"
    },
    "dependencies": {
        "vite": "^5.4.10"
    }
}
